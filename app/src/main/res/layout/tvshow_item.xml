<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/showImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/margin_titleText"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_top_detail"
        android:layout_toRightOf="@id/showImage">
        <TextView
            android:id="@+id/showTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            style="@style/TitleTheme"/>
        <TextView
            android:id="@+id/voteAverageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/showTitleText"
            android:text="@string/vote_average" />
        <TextView
            android:id="@+id/voteAverageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/voteAverageLabel"
            android:layout_below="@+id/showTitleText"
            android:layout_marginLeft="@dimen/margin_titleText"/>
    </RelativeLayout>

</RelativeLayout>